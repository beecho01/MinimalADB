{
    "name": "minimaladb",
    "description": "MinimalADB is a minimalistic Android ADB client for Windows based on Microsoft's Fluent UI.",
    "version": "1.1.0",
    "license": "MIT",
    "author": {
        "name": "James Beeching",
        "url": "https://github.com/beecho01"
    },
    "main": "dist-main/index.js",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "eslint .",
        "package:publish": "electron-builder --config electron-builder.config.js --publish always",
        "package": "yarn run build && electron-builder --config electron-builder.config.js",
        "prettier:check": "prettier --check -- src/**/*.{ts,tsx}",
        "prettier": "prettier --write -- src/**/*.{ts,tsx}",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test": "vitest run",
        "typecheck:npm": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
        "typecheck:yarn": "yarn run typecheck:main && yarn run typecheck:preload && yarn run typecheck:renderer",
        "typecheck:main": "tsc -p src/main/tsconfig.json --noEmit",
        "typecheck:preload": "tsc -p src/preload/tsconfig.json --noEmit",
        "typecheck:renderer": "tsc -p src/renderer/tsconfig.json --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.12.7",
        "@types/react": "^18.3.4",
        "@types/react-dom": "^18.3.0",
        "@types/react-router-dom": "^5.3.3",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.8",
        "dmg-builder": "25.1.8",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "eslint": "^9.17.0",
        "globals": "^15.8.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "sass-embedded": "^1.83.4",
        "scheduler": "0.23.0",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.18.2",
        "vite": "^6.0.6",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vitest": "^2.1.8"
    },
    "dependencies": {
        "@devicefarmer/adbkit": "^3.3.8",
        "@fluentui/react-components": "^9.56.8",
        "@fluentui/react-icons": "^2.0.270",
        "@xterm/addon-clipboard": "^0.1.0",
        "@xterm/addon-fit": "^0.10.0",
        "@xterm/addon-unicode11": "^0.8.0",
        "@xterm/addon-webgl": "^0.18.0",
        "@xterm/xterm": "^5.5.0",
        "electron-builder-squirrel-windows": "25.1.8",
        "jetbrains-mono": "^1.0.6",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router": "^6.26.1",
        "react-router-dom": "^6.26.1"
    }
}
