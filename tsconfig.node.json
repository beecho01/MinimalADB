{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@common/*": ["./src/common/*"]
        },
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2015"
    }
}
